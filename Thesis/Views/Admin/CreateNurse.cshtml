@model Thesis.Models.NurseModel
@{
    ViewBag.Title = "CreateNurse";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.ValidationSummary(true)

@if (@User.Identity.IsAuthenticated)
{
    <div class="page-title-container">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 wow fadeIn">
                    <i class="fa fa-pencil"></i>
                    <h1>@Html.Label("Create Nurse Account") </h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="contact-us-container">
            <div class="container">
                <div class="row">
                    @using (Html.BeginForm(Html.BeginForm("CreateNurse", "Admin", FormMethod.Post, new { @class = "form-inline" })))
                    {
                        <div class="col-sm-7 contact-form wow fadeInLeft">
                            <h3> Personal Information</h3>

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.FirstName, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Nurse.FirstName) })
                            </div>
                            &emsp;

                            <div class="form-group">
                                <label class="sr-only"> </label>
                                @Html.TextBoxFor(u => u.Nurse.MiddleName, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Nurse.MiddleName) })
                            </div>
                            &emsp;
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.LastName, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Nurse.LastName) })
                            </div>

                            <br />
                            <br />

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.LicenseNo, new { @class = "form-control", type = "name", placeholder = @Html.DisplayName("License Number") })
                            </div>
                            &emsp;


                            <br />
                            <br />

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.DateBirth, new { @class = "form-control", type = "date" })
                            </div>
                            &emsp;


                            @Html.RadioButtonFor(u => u.Nurse.Sex, "true") MALE

                            @Html.RadioButtonFor(u => u.Nurse.Sex, "false") FEMALE


                            &nbsp;


                            <br>

                            <h3> Address </h3>
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Address.AddressType, new { @class = "form-control", type = "name", placeholder = @Html.DisplayName("Address") })
                            </div>

                            <br />
                            <br />

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Address.City, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Address.City) })
                            </div>
                            &emsp;
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Address.Province, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Address.Province) })
                            </div>
                            &emsp;
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Address.Zipcode, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Address.Zipcode) })
                            </div>


                            <h3> Contact Details </h3>

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Contact.MobileNo, new { @class = "form-control", type = "name", placeholder = @Html.DisplayName("Mobile Number") })
                            </div>
                            &emsp;
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Contact.PhoneNo, new { @class = "form-control", type = "name", placeholder = @Html.DisplayName("Phone Number") })
                            </div>

                            <br />
                            <br />

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.Email, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Nurse.Email) })
                            </div>

                        </div>
                        <div class="col-sm-5 contact-address wow fadeInUp">
                            <br><br>
                            <h3>Hospital Details</h3>
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.EmployeeId, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Nurse.EmployeeId) })
                            </div>
                            <br><br>

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.HospName, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Nurse.HospName) })
                            </div>
                            <br><br>

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Address.AddressType, new { @class = "form-control", type = "name", placeholder = @Html.DisplayName("Address") })
                            </div>
                            &emsp;

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Address.City, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Address.City) })
                            </div>

                            <h3> Account Details </h3>
                            <div class="form-group">
                                <label class="sr-only"></label>

                                @Html.TextBoxFor(u => u.Users.Username, new { @class = "form-control", type = "name", placeholder = @Html.DisplayNameFor(u => u.Users.Username) })
                            </div>
                            <br>
                            <br>
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.PasswordFor(u => u.Users.Password, new { @class = "form-control", placeholder = @Html.DisplayNameFor(u => u.Users.Password) })
                            </div>
                            <br>
                            <br>
                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.PasswordFor(u => u.Users.Password, new { @class = "form-control", placeholder = @Html.DisplayName("Confirm Password") })
                            </div>
                            <br>
                            <br>
                            <br>

                            <div class="dropdown">
                                <a aria-expanded="true">
                                    @Html.DropDownListFor(u => u.Nurse.SecQuestion, new List<SelectListItem>
                                {
                                  new SelectListItem(){Text = "Select Security Question", Value = "", Disabled=true, Selected=true},
                                  new SelectListItem(){Text = "What was the first test you cheated on?", Value = "Question1"},
                                  new SelectListItem(){Text = "Who was the first person you cheated on?", Value = "Question2"},
                                  new SelectListItem(){Text = "When was the first time you cheated?", Value = "Question3"}
                                }, new { @class = "btn btn-default dropdown-toggle" })
                                </a>
                            </div>

                            <br>

                            <div class="form-group">
                                <label class="sr-only"></label>
                                @Html.TextBoxFor(u => u.Nurse.SecAnswer, new { @class = "form-control", type = "name", placeholder = @Html.DisplayName("Security Answer") })
                            </div>

                        </div>
                        <br><br>
                        <center><button type="submit" class="btn btn-default">Submit</button></center>
                    }
                </div>
            </div>
        </div>
    </div>
}
